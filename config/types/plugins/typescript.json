{
  "plugin-typescript": {
    "name": "Plugin with TypeScript compilation",
    "sort": 125,
    "compilation": "typescript",
    "setup": {
      "base": "setups/${type.id}",
      "metaReplace": {
        "regex": "\\$\\{([^}]+)}",
        "files": [
          "LICENSE",
          "README.md",
          "package.json",
          "plugin.json",
          "templates/**/*"
        ],
        "paths": ["**/*"]
      },
      "meta": {
        "Name": "TypeScript Plugin",
        "name": "plugin",
        "path": "plugins"
      }
    }
  }
}