{
  "default": {
    "dev": [
      "tools.meta.templates"
    ],
    "dist": [
      "default.dev",
      "tools.minify"
    ]
  },
  "coffee": {
    "dev": [
      "default.dev",
      "tools.coffee"
    ],
    "dist": [
      "coffee.dev",
      "tools.minify"
    ]
  },
  "tools": {
    "meta": {
      "all": {
        "compiler": "moduleMeta",
        "src": "**/*",
        "regex": "@\\{([^}]+)}"
      },
      "templates": {
        "compiler": "moduleMeta",
        "src": "templates/**/*",
        "regex": "@\\{([^}]+)}"
      }
    },
    "minify": {
      "compiler": "minify",
      "src": [
        "public/**/*.js",
        "static/**/*.js"
      ]
    },
    "coffee": [
      {
        "compiler": "coffee",
        "cwd": "lib/",
        "src": "**/*.coffee",
        "options": {
          "bare": true
        }
      },
      {
        "compiler": "coffee",
        "src": "**/*.coffee"
      },
      {
        "compiler": "clean",
        "src": "**/*.coffee"
      }
    ]
  }
}
